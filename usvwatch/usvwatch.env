# DE: Sprache fuer Betreff und Texte. Werte: de oder en
# EN: Language for subject and texts. Values: de or en
USVWATCH_LANG=de

# DE: Optionaler Host-Name in der Mail (falls leer: System-Hostname)
# EN: Optional host label shown in mail (if empty: system hostname)
HOST_LABEL=

# DE: Wo der Status gespeichert wird (Spam-Schutz, "nur bei Wechsel" usw.)
# EN: Where to store state (anti spam, only on changes, etc.)
STATE_DIR=.

# DE: NUT Server (USV Dienst). Standard ist localhost:3493
# EN: NUT server (UPS service). Default is localhost:3493
NUT_HOST=127.0.0.1
NUT_PORT=3493
NUT_TIMEOUT=5

# DE: USV Name. Leer lassen, wenn nur 1 USV vorhanden ist (Auto-Auswahl).
# EN: UPS name. Leave empty if only 1 UPS exists (auto select).
NUT_UPS_NAME=

# DE: Nur falls dein NUT Server Auth verlangt (meist nicht noetig).
# EN: Only if your NUT server requires auth (usually not needed).
NUT_USERNAME=nut
NUT_PASSWORD=nut

# -------------------------------------------------------------------
# DE: SMTP Einstellungen fuer Mailversand
# EN: SMTP settings for sending mail
SMTP_HOST=
SMTP_PORT=587

# DE: TLS Modus: starttls, ssl, none
# EN: TLS mode: starttls, ssl, none
SMTP_TLS=starttls

# DE: TLS Zertifikate pruefen (1) oder ignorieren (0). Fuer self-signed ggf. 0.
# EN: Verify TLS certs (1) or ignore (0). For self-signed you may set 0.
SMTP_TLS_VERIFY=1

# DE: SMTP Login (optional)
# EN: SMTP login (optional)
SMTP_USER=
SMTP_PASS=

# DE: Timeout in Sekunden
# EN: Timeout in seconds
SMTP_TIMEOUT=15

# DE: Absender und Empfaenger (Komma-getrennt)
# EN: Sender and recipients (comma separated)
MAIL_FROM=
MAIL_TO=

# DE: Optional CC / BCC
# EN: Optional CC / BCC
MAIL_CC=
MAIL_BCC=

# DE: Debug-Ausgaben in STDOUT
# EN: Debug output to stdout
DEBUG=0

# DE: Welche Mails sollen gesendet werden (1 an, 0 aus)
# EN: Which mails should be sent (1 on, 0 off)
ALERT_ON_BATTERY=1
ALERT_BACK_ONLINE=1
ALERT_LOW_BATTERY=1
ALERT_CHARGE_LOW=1
ALERT_RUNTIME_LOW=1
ALERT_UNREACHABLE=1
ALERT_RECOVERED=1

# DE: Schwellwerte
# EN: Thresholds
CHARGE_THRESHOLD_PERCENT=20
RUNTIME_THRESHOLD_MIN=10

# DE: Erneut senden nach X Minuten (0 = nie)
# EN: Resend after X minutes (0 = never)
THRESHOLD_RESEND_MIN=60
UNREACHABLE_RESEND_MIN=120

# DE: Tagesreport (1 an, 0 aus) und Uhrzeit (HH:MM)
# EN: Daily report (1 on, 0 off) and time (HH:MM)
ENABLE_DAILY_REPORT=0
DAILY_REPORT_TIME=09:00

# DE: Alle USV Werte als Tabelle in der Mail
# EN: Include all UPS values as a table in the mail
INCLUDE_ALL_VARS=1

# DE: Status-Codes als Legende in der Mail anzeigen (OL/OB/LB usw.)
# EN: Show status code legend in the email (OL/OB/LB etc.)
INCLUDE_STATUS_LEGEND=1

# DE: Zusaetzliches Feld "ups.status.human" in der Rohwert-Tabelle anzeigen
# EN: Add an extra field "ups.status.human" to the raw values table
ADD_HUMAN_STATUS_FIELD=1

# DE: Optionaler Filter fuer "Alle Werte" (Regex)
# EN: Optional filter for "All values" (regex)
ALL_VARS_INCLUDE_REGEX=
ALL_VARS_EXCLUDE_REGEX=